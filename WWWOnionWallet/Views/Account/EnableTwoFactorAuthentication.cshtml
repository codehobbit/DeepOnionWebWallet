@{
    ViewBag.Title = "Onion Wallet - Two Factor Authentication";
}

@section Breadcrumbs {
    <ul class="breadcrumb">
        <li><i class="icon-home2 position-left"></i> <a href="/">Onion Wallet</a></li>
        <li><a href="@Url.Action("Account", "Home")">Account</a></li>
        <li class="active">Enable Two Factor Authentication</li>
    </ul>
}

<div class="row">
    <div class="col-md-6 col-xs-12 col-md-offset-3 ">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h2 class="panel-title">Enable Two Factor Authentication</h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <p>
                            Please download Google Authenticator on your mobile and add a new authentication. You can either scan the barcode or enter the key text. Google Authenticator afterwards will provide a code, enter the code into the field below.
                        </p>
                        <div class="full-width text-center">
                            <img src="@ViewBag.KeyImage" width="300" height="300" alt="QR Code" />
                        </div>
                        <div class="full-width text-center" style="word-wrap: break-word;">
                            @ViewBag.KeyText
                        </div>
                        <div class="mt-20 text-center full-width">
                            @using (Html.BeginForm())
                            {
                                <div class="row">
                                    <div class="col-sm-3 col-sm-offset-3 col-xs-6">
                                        <input type="text" id="code" name="code" placeholder="Code" width="50" class="form-control" />
                                    </div>
                                    <div class="col-sm-3 col-xs-6">
                                        <button type="submit" class="btn bg-blue btn-block">Submit</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>